		<property name="workload" value="2.5"/>
		<property name="status" value="PRIVATE"/>
		<property name="link"> <null/></property>
		<property name="manager" ref="administratorManager"/>
	</bean>
	<bean id="task04" class="acme.entities.tasks.Task">
